<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".composite.CompositeActivity">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="组合模式" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="以创建和打印员工的层次结构为例"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bt_ceo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CEO"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Head Sales(销售主管)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt_marketing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Head Marketing(市场营销负责人)"
                android:textAllCaps="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/tv_define"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</layout>